@if (Countries is not null && Countries.Any())
{
    int countryIndex = 0;

    @foreach(var country in Countries)
    {
        <CountryChipComponent Country="@country" Colour="(Color)GetCountryCodeIndex(countryIndex)" />

        countryIndex++;
    }
}

@code
{
    [Parameter]
    public IEnumerable<string>? Countries { get; set; }

    [Inject]
    private IFivePMSomewhereService FivePMSomewhereService { get; set; } = null!;

    private int NumberOfColours => Enum.GetNames(typeof(Color)).Length;

    private int GetCountryCodeIndex(int countryIndex) => countryIndex % NumberOfColours;
}