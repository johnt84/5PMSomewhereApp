@if (TimeZone is not null)
{
    <MudText Typo="Typo.body1" Class="mt-5">
        It was 5 PM @TimeZone.NumberOfMinutesAfterTarget minutes ago in <CountryChipComponent Country="@TimeZone.RandomCountry" />
    </MudText>

    <TimeZone Name="@TimeZone.TimeZoneName" />

    <CountriesComponent Countries="@TimeZone.Countries" />
}

@code {
    [Parameter]
    public TimeAfterTargetModel? TimeZone { get; set; }
}